{
	"name": "bigbox-deco",
	"title": "BigBox - Deco",
	"author": "Spencer Finnell",
	"description": "Easily manage and scale WooCommerce product catalogs.",
	"version": "2.0.0",
	"license": "GPL-2.0-or-later",
	"main": "webpack.config.js",
	"engines": {
		"node": ">=8.0.0",
		"npm": ">=6.0.0"
	},
	"devDependencies": {
		"@wordpress/babel-preset-default": "3.0.1",
		"@wordpress/dom-ready": "^2.0.2",
		"autoprefixer": "9.4.4",
		"babel-core": "6.26.3",
		"babel-eslint": "10.0.1",
		"babel-loader": "8.0.5",
		"babel-plugin-import-glob": "^2.0.0",
		"babel-plugin-transform-react-jsx": "^6.24.1",
		"bootstrap": "^4.1.1",
		"classnames": "^2.2.5",
		"cross-env": "^5.1.4",
		"eslint": "5.12.0",
		"eslint-plugin-wordpress": "git://github.com/WordPress-Coding-Standards/eslint-plugin-wordpress.git#a650f73e2461ddae0faec900c0199b3c258cb5da",
		"exports-loader": "^0.7.0",
		"extract-text-webpack-plugin": "4.0.0-beta.0",
		"node-sass": "^4.9.0",
		"postcss-loader": "^3.0.0",
		"raw-loader": "^1.0.0",
		"sass-loader": "^7.0.1",
		"stylelint": "^9.2.0",
		"stylelint-config-wordpress": "^13.0.0",
		"webpack": "^4.8.1",
		"webpack-cli": "^3.0.3"
	},
	"eslintConfig": {
		"extends": [
			"plugin:wordpress/recommended",
			"plugin:wordpress/esnext",
			"plugin:wordpress/jsdoc",
			"plugin:wordpress/strict"
		],
		"plugins": [
			"wordpress"
		]
	},
	"babel": {
		"presets": [
			"@wordpress/default",
			{
				"plugins": [
					"import-glob",
					"transform-react-jsx"
				]
			}
		]
	},
	"scripts": {
		"build": "cross-env NODE_ENV=production webpack",
		"css-lint": "./node_modules/.bin/stylelint resources/**/*.scss --syntax scss; exit 0",
		"css-lint:fix": "./node_modules/.bin/stylelint resources/**/*.scss --syntax scss --fix; exit 0",
		"dev": "cross-env NODE_ENV=default webpack --watch",
		"lint": "./node_modules/.bin/eslint .; exit 0",
		"lint:fix": "./node_modules/.bin/eslint . --fix; exit 0",
		"lint:jsdoc": "eslint . --config eslint/jsdoc-config.js; exit 0",
		"package-theme": "./bin/package-theme.sh",
		"setup-theme": "./bin/setup-theme.sh"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/bigboxwc/bigbox-deco/"
	},
	"bugs": {
		"url": "https://github.com/bigboxwc/bigbox-deco/issues"
	},
	"homepage": "https://bigboxwc.com"
}
